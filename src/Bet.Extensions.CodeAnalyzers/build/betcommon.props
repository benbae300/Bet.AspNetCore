<Project>
  <!-- https://github.com/DotNetAnalyzers/StyleCopAnalyzers/blob/master/documentation/Configuration.md#sharing-configuration-among-solutions-->
  <PropertyGroup>
    <CodeAnalysisRuleSetLocation Condition=" '$(NuGetPackageRoot)' != '' ">$(NuGetPackageRoot)bet.extensions.codeanalyzers\3.1.2-pre</CodeAnalysisRuleSetLocation>
   </PropertyGroup>
  <PropertyGroup>
  <RunCodeAnalysis>true</RunCodeAnalysis>
  <CodeAnalysisRuleSet>$(CodeAnalysisRuleSetLocation)\betcommon.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>
  <ItemGroup>
    <AdditionalFiles Include="$(CodeAnalysisRuleSetLocation)\stylecop.json" Link="stylecop.json" />
    <AdditionalFiles Include="$(CodeAnalysisRuleSetLocation)\betcommon.ruleset" />
  </ItemGroup>
</Project>
